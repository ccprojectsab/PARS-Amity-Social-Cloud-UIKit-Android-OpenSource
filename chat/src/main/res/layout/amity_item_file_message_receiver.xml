<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.amity.socialcloud.uikit.common.common.views.AmityColorShade" />

        <variable
            name="vmFileMsg"
            type="com.amity.socialcloud.uikit.chat.messages.viewModel.AmityFileMsgViewModel" />

        <variable
            name="position"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/dateHeader"
            layout="@layout/amity_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{vmFileMsg.isDateVisible() ? View.VISIBLE : View.GONE}"
            app:date="@{vmFileMsg.msgDate}"
            app:dateFillColor="@{vmFileMsg.dateFillColor}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutAudioReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{vmFileMsg.isDeleted() ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateHeader">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivAvatar"
                style="@style/AmityCircularAvatarStyle"
                amityBackgroundColor="@{@color/amityColorPrimary}"
                backgroundColorShade="@{AmityColorShade.SHADE3}"
                imageUrl="@{vmFileMsg.amityMessage.creator.avatar.url}"
                android:layout_width="@dimen/amity_forty"
                android:layout_height="@dimen/amity_forty"
                android:layout_marginStart="@dimen/amity_padding_m1"
                android:visibility="@{vmFileMsg.isSenderVisible() ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                style="@style/AmityTextStyleBody"
                textColorShade="@{AmityColorShade.SHADE1}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/amity_padding_s"
                android:text="@{vmFileMsg.sender}"
                android:textColor="@color/amityColorBase"
                android:visibility="@{vmFileMsg.isSenderVisible() ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toEndOf="@id/ivAvatar"
                app:layout_constraintTop_toTopOf="@id/ivAvatar" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutAudio"
                fillColor="@{vmFileMsg.receiverFillColor}"
                roundedCorner="@{true}"
                topLeftRadius="@{@dimen/amity_zero}"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/amity_padding_xxs"
                android:onLongClick="@{() -> vmFileMsg.onLongPress(position)}"
                app:layout_constraintStart_toStartOf="@id/tvName"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_goneMarginStart="@dimen/amity_sixty_eight">

                <ImageView
                    android:id="@+id/ivFileIcon"
                    android:layout_width="@dimen/amity_twenty_four"
                    android:layout_height="@dimen/amity_twenty_four"
                    android:layout_margin="@dimen/amity_padding_xs"
                    android:layout_marginStart="@dimen/amity_padding_m1"
                    android:onLongClick="@{() -> vmFileMsg.onLongPress(position)}"
                    android:src="@drawable/amity_ic_doc_large"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/tvFileName"
                    style="@style/AmityTextStyleCaption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/amity_padding_xs"
                    android:maxLines="1"
                    android:textColor="@color/amityColorBase"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivFileIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.2" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:alpha="0.5"
                android:backgroundTint="@color/amityColorBase"
                android:visibility="@{vmFileMsg.inSelectionMode || vmFileMsg.uploading ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/layoutAudio"
                app:layout_constraintEnd_toEndOf="@id/layoutAudio"
                app:layout_constraintStart_toStartOf="@id/layoutAudio"
                app:layout_constraintTop_toTopOf="@id/layoutAudio"
                app:roundedCorner="@{true}"
                app:topRightRadius="@{@dimen/amity_zero}" />

            <include
                layout="@layout/amity_view_msg_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/amity_padding_xxs"
                android:visibility="@{vmFileMsg.isFailed() ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/layoutAudio"
                app:layout_constraintStart_toEndOf="@id/layoutAudio"
                app:layout_constraintTop_toTopOf="@id/layoutAudio"
                app:viewModel="@{vmFileMsg}" />

            <TextView
                android:id="@+id/tvTime"
                style="@style/AmityTextStyleCaption"
                textColorShade="@{AmityColorShade.SHADE2}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/amity_padding_xxs"
                android:layout_marginTop="@dimen/amity_padding_xxs"
                android:text="@{vmFileMsg.msgTime}"
                android:textColor="@color/amityColorBase"
                android:visibility="@{vmFileMsg.isDeleted() ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="@id/layoutAudio"
                app:layout_constraintTop_toBottomOf="@id/layoutAudio" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            layout="@layout/amity_view_msg_deleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/amity_sixty_eight"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateHeader"
            app:viewModel="@{vmFileMsg}" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>