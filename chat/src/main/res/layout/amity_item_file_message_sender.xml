<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.amity.socialcloud.uikit.common.common.views.AmityColorShade" />

        <variable
            name="vmFileMsg"
            type="com.amity.socialcloud.uikit.chat.messages.viewModel.AmityFileMsgViewModel" />

        <variable
            name="position"
            type="int" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/dateHeader"
            layout="@layout/amity_view_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{vmFileMsg.isDateVisible() ? View.VISIBLE : View.GONE}"
            app:date="@{vmFileMsg.msgDate}"
            app:dateFillColor="@{vmFileMsg.dateFillColor}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFile"
            fillColor="@{vmFileMsg.senderFillColor}"
            roundedCorner="@{true}"
            topRightRadius="@{@dimen/amity_zero}"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/amity_padding_m1"
            android:onLongClick="@{() -> vmFileMsg.onLongPress(position)}"
            android:visibility="@{vmFileMsg.isDeleted() ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateHeader">


            <!--       <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/layoutAudio"
                       fillColor="@{vmFileMsg.receiverFillColor}"
                       roundedCorner="@{true}"
                       topLeftRadius="@{@dimen/amity_zero}"
                       android:layout_width="120dp"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/amity_padding_xxs"
                       android:onLongClick="@{() -> vmFileMsg.onLongPress(position)}"
                       app:layout_constraintStart_toStartOf="@id/tvName"
                       app:layout_constraintTop_toBottomOf="@id/tvName"
                       app:layout_goneMarginStart="@dimen/amity_sixty_eight">-->

            <ImageView
                android:id="@+id/ivFileIcon"
                android:layout_width="@dimen/amity_twenty_four"
                android:layout_height="@dimen/amity_twenty_four"
                android:layout_margin="@dimen/amity_padding_xs"
                android:onLongClick="@{() -> vmFileMsg.onLongPress(position)}"
                android:src="@drawable/amity_ic_doc_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvFileName"
                style="@style/AmityTextStyleCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/amity_padding_xs"
                android:maxLines="1"
                android:textColor="@color/amityColorWhite"
                app:layout_constraintBottom_toBottomOf="@id/ivFileIcon"
                app:layout_constraintStart_toEndOf="@id/ivFileIcon"
                app:layout_constraintTop_toTopOf="@id/ivFileIcon" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:backgroundTint="@color/amityColorBase"
            android:visibility="@{vmFileMsg.inSelectionMode ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/layoutFile"
            app:layout_constraintEnd_toEndOf="@id/layoutFile"
            app:layout_constraintStart_toStartOf="@id/layoutFile"
            app:layout_constraintTop_toTopOf="@id/layoutFile"
            app:roundedCorner="@{true}"
            app:topRightRadius="@{@dimen/amity_zero}" />

        <include
            layout="@layout/amity_view_msg_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/amity_padding_xxs"
            android:visibility="@{vmFileMsg.isFailed() ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@id/layoutFile"
            app:layout_constraintStart_toEndOf="@id/layoutFile"
            app:layout_constraintTop_toTopOf="@id/layoutFile"
            app:viewModel="@{vmFileMsg}" />

        <TextView
            android:id="@+id/tvTime"
            style="@style/AmityTextStyleCaption"
            textColorShade="@{AmityColorShade.SHADE2}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/amity_padding_xxs"
            android:layout_marginTop="@dimen/amity_padding_xxs"
            android:text="@{vmFileMsg.msgTime}"
            android:textColor="@color/amityColorBase"
            android:visibility="@{vmFileMsg.isDeleted() ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="@id/layoutFile"
            app:layout_constraintTop_toBottomOf="@id/layoutFile" />


        <include
            layout="@layout/amity_view_msg_deleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/amity_padding_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateHeader"
            app:viewModel="@{vmFileMsg}" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>